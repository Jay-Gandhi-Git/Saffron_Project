@model SaffronHotelAdminManagement_MVC4.ItemMaster
@{
    ViewBag.Title = "ItemMasterDelete";
    Layout = "~/Views/Shared/Outer_LayoutPage.cshtml";
}

<link href="~/css/style_drop.css" rel="stylesheet" />

<script type="text/javascript">
    jQuery(window).load(function () {
        //jQuery("#status").fadeOut();
        jQuery("#preloader").delay(1800).fadeOut("slow");
    })
</script>

<div id="preloader">
    <div id="status">&nbsp;</div>
</div>


<div class="wthree_agile_admin_info">
    <!-- /w3_agileits_top_nav-->
    <!-- /nav-->
    <!-- //w3_agileits_top_nav-->
    <!-- /inner_content-->
    <div class="inner_content">
        <!-- /inner_content_w3_agile_info-->
        <!-- breadcrumbs -->
        <!-- //breadcrumbs -->

        <div class="inner_content_w3_agile_info two_in">
            @*<h2 class="w3_inner_tittle">Inputs</h2>*@

            <!--/forms-->
            <div class="forms-main_agileits">

                <!--/forms-inner-->
                <div class="forms-inner">

                    <div class="wthree_general">


                        <div class="grid-1 graph-form agile_info_shadow">
                            <h3 class="w3_inner_tittle two">Create New Item </h3>
                            @if (ViewBag.errorMsg != null)
                            {
                                <span style="color:#ff3333;font-family:sans-serif;letter-spacing:1px;">@ViewBag.errorMsg</span>
                            }
                            <form class="form-horizontal" method="post">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Item Category</label>
                                    <div class="col-md-4">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-cutlery"></i>
                                            </span>

                                            <select name="ItemCategoryId" id="ItemCategoryId" class="form-control1 icon" disabled>
                                                @{
                                                    var itemCategoryList = ViewBag.ItemCategory as List<SaffronHotelAdminManagement_MVC4.ItemCategory>;
                                                }
                                                @foreach (var item in itemCategoryList)
                                                {
                                                    if (item.ItemCategory_ID == Model.ItemCategory_ID.Value)
                                                    {
                                                        <option value="@item.ItemCategory_ID" selected>@item.ItemCategoryName</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@item.ItemCategory_ID">@item.ItemCategoryName</option>
                                                    }

                                                }
                                            </select>


                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Item Category Name</label>
                                    <div class="col-md-4">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-cutlery"></i>
                                            </span>
                                            <input type="text" name="ItemName" class="form-control1 icon" value="@((Model.ItemName != null) ? Model.ItemName : "")" required="" disabled>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Rate</label>
                                    <div class="col-md-4">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-cutlery"></i>
                                            </span>
                                            <input type="text" name="ItemName" class="form-control1 icon" value="@((Model.Rate!=null)? Model.Rate.Value:0)" required="" disabled>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group" id="itemRate">
                                    <label class="col-md-2 control-label">CGST</label>
                                    <div class="col-md-4">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-percent"></i>
                                            </span>
                                            <input type="number" name="cgst" class="form-control1 icon" value="@((Model.CGST!=null)? Model.CGST.Value:0)" required="" disabled>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group" id="itemRate">
                                    <label class="col-md-2 control-label">SGST</label>
                                    <div class="col-md-4">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-percent"></i>
                                            </span>
                                            <input type="number" name="sgst" class="form-control1 icon" value="@((Model.SGST!=null)? Model.SGST.Value:0)" required="" disabled>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group" id="itemRate">
                                    <label class="col-md-2 control-label">Re-OrderLevel</label>
                                    <div class="col-md-4">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-percent"></i>
                                            </span>
                                            <input type="number" name="ROLevel" class="form-control1 icon" value="@((Model.ReOrderLevel!=null)? Model.ReOrderLevel.Value :0)" required="" disabled>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group" id="itemRate">
                                    <label class="col-md-2 control-label">Minimum Qunatity</label>
                                    <div class="col-md-4">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-percent"></i>
                                            </span>
                                            <input type="number" name="MinQty" class="form-control1 icon" value="@((Model.MinimumQuantatity!=null)?Model.MinimumQuantatity.Value:0)" required="" disabled>
                                        </div>
                                    </div>
                                </div>
                                @{
                                    string check = "checked";
                                }
                                <div class="form-group">
                                    <div class="col-sm-offset-2">
                                        <div class="checkbox">
                                            <label style="margin-left:17px;">
                                                <input type="checkbox" name="veg" @if (Model.IsVeg != null && Model.IsVeg.Value) { @check  ; } disabled />
                                                Veg.
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-offset-2">
                                    <input type="submit" value="Delete Item" class="frmButton" onclick="return confirm('Are you sure??')" />
                                    <a href="@Url.Action("ItemMasterInformation","Admin")" class="btn btn-default">
                                        Back
                                    </a>
                                </div>
                            </form>

                        </div>
                    </div>

                    <!--//set-4-->
                </div>
                <!--//forms-inner-->
            </div>
        </div>
        <!-- //inner_content_w3_agile_info-->
    </div>
    <!-- //inner_content-->
</div>

