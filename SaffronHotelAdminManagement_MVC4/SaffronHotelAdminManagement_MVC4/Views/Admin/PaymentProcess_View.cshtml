@model SaffronHotelAdminManagement_MVC4.Payment
@{
    ViewBag.Title = "PaymentProcess_View";
    Layout = "~/Views/Shared/Outer_LayoutPage.cshtml";
}

<script type="text/javascript">
    jQuery(window).load(function () {
        //jQuery("#status").fadeOut();
        jQuery("#preloader").delay(1800).fadeOut("slow");
    })
</script>

<div id="preloader">
    <div id="status">&nbsp;</div>
</div>


<div class="wthree_agile_admin_info">
    <!-- /w3_agileits_top_nav-->
    <!-- /nav-->
    <!-- //w3_agileits_top_nav-->
    <!-- /inner_content-->
    <div class="inner_content">
        <!-- /inner_content_w3_agile_info-->
        <!-- breadcrumbs -->
       
        <!-- //breadcrumbs -->

        <div class="inner_content_w3_agile_info two_in">
            @*<h2 class="w3_inner_tittle">Inputs</h2>*@

            <!--/forms-->
            <div class="forms-main_agileits">

                <!--/forms-inner-->
                <div class="forms-inner">

                    <div class="wthree_general">


                        <div class="grid-1 graph-form agile_info_shadow">
                            <h3 class="w3_inner_tittle two">Payment </h3>
                            @if (ViewBag.errorMsg != null)
                            {
                                <span style="color:#ff3333;font-family:sans-serif;letter-spacing:1px;">@ViewBag.errorMsg</span>
                            }
                            <form class="form-horizontal" method="post">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Customer Name</label>
                                    <div class="col-md-4">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-user"></i>
                                            </span>
                                            <input type="text" name="cname" value="@Model.OrderMaster.CustomerDetail.CustomerName" class="form-control1 icon" readonly>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Payment Method</label>
                                    <div class="col-md-4">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class=""></i>
                                            </span>
                                            <div class="checkbox">
                                                &nbsp;&nbsp;<input type="radio" value="Cash" name="mode" checked />&nbsp;Cash&nbsp;&nbsp;
                                                <input type="radio" value="Visa Card" name="mode" />&nbsp;Visa Card&nbsp;&nbsp;&nbsp;
                                                <input type="radio" value="Debit Card" name="mode" />&nbsp;Debit Card&nbsp;&nbsp;&nbsp;

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label"></label>
                                    <div class="col-md-4">
                                        <div class="input-group">
                                            <span @*class="input-group-addon"*@>
                                                <i class="fa fa-info-circle"></i>
                                            </span>
                                            <label>&nbsp;&nbsp;&nbsp;Bill Amount : @Model.OrderMaster.OrderDetailMasters.Sum(a => a.Amount ) &nbsp;&nbsp;&nbsp; Paid Amount: @Model.OrderMaster.Payments.Sum(a => a.Amount.Value)</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Amount</label>
                                    <div class="col-md-4">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-inr"></i>
                                            </span>
                                            <input type="number" name="amount" value="@(Model.OrderMaster.OrderDetailMasters.Sum(a => a.Amount) - Model.OrderMaster.Payments.Sum(a => a.Amount.Value))" class="form-control1 icon" required="">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Date</label>
                                    <div class="col-md-4">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </span>
                                            <input type="date" name="date" value="@Model.PayementDate.Value.ToString("yyyy-MM-dd")" class="form-control1 icon" required="">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Remarks</label>
                                    <div class="col-md-4">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class=""></i>
                                            </span>
                                            <input type="text" name="remark" value="@Model.Remarks" placeholder="If any" class="form-control1 icon">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-offset-2">
                                    <input type="submit" value="Update Pay" class="frmButton" />
                                    <a href="@Url.Action("PaymentProcess", "Admin", new { id=Model.OrderMaster_Id})" class="btn btn-default">
                                        Back
                                    </a>
                                </div>
                            </form>


                            

                        </div>
                    </div>

                    <!--//set-4-->
                </div>
                <!--//forms-inner-->
            </div>
        </div>
        <!-- //inner_content_w3_agile_info-->
    </div>
    <!-- //inner_content-->
</div>

