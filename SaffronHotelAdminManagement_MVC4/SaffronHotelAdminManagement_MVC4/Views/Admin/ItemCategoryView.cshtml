@model SaffronHotelAdminManagement_MVC4.ItemCategory
@{
    ViewBag.Title = "ItemCategoryUpdate";
    Layout = "~/Views/Shared/Outer_LayoutPage.cshtml";
}

<script type="text/javascript">
    jQuery(window).load(function () {
        //jQuery("#status").fadeOut();
        jQuery("#preloader").delay(1800).fadeOut("slow");
    })
</script>

<div id="preloader">
    <div id="status">&nbsp;</div>
</div>



<div class="wthree_agile_admin_info">
    <!-- /w3_agileits_top_nav-->
    <!-- /nav-->
    <!-- //w3_agileits_top_nav-->
    <!-- /inner_content-->
    <div class="inner_content">
        <!-- /inner_content_w3_agile_info-->
        <!-- breadcrumbs -->
      
        <!-- //breadcrumbs -->

        <div class="inner_content_w3_agile_info two_in">
            @*<h2 class="w3_inner_tittle">Inputs</h2>*@

            <!--/forms-->
            <div class="forms-main_agileits">

                <!--/forms-inner-->
                <div class="forms-inner">

                    <div class="wthree_general">


                        <div class="grid-1 graph-form agile_info_shadow">
                            <h3 class="w3_inner_tittle two">Item Category Update </h3>
                            @if (ViewBag.errorMsg != null)
                            {
                                <span style="color:#ff3333;font-family:sans-serif;letter-spacing:1px;">@ViewBag.errorMsg</span>
                            }
                            <form class="form-horizontal" method="post">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Item Category Name</label>
                                    <div class="col-md-4">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-cutlery"></i>
                                            </span>
                                            <input type="text" name="categoryName" class="form-control1 icon" value="@Model.ItemCategoryName" required="">
                                        </div>
                                    </div>
                                </div>
                                @{
                                    string check = "checked";
                                }
                                <div class="form-group">
                                    <div class="col-sm-offset-2">
                                        <div class="checkbox">
                                            <label style="margin-left:17px;">
                                                <input type="checkbox" name="MenuItem" @if (Model.IsMenuItem.Value) { @check ; } />
                                                Menu Item
                                            </label>
                                            <label style="margin-left:17px;">
                                                <input type="checkbox" name="Assets" @if (Model.IsAssets.Value) { @check ; } />
                                                Assets
                                            </label>
                                            <label style="margin-left:17px;">
                                                <input type="checkbox" name="Service" @if (Model.IsService.Value) { @check ; } />
                                                Service
                                            </label>
                                            <label style="margin-left:17px;">
                                                <input type="checkbox" name="KitchenRawMetiral" @if (Model.IsRawMetirial.Value) { @check ; } />
                                                Kitchen Raw Metiral
                                            </label>

                                        </div>

                                    </div>
                                </div>
                                <div class="col-sm-offset-2">
                                    <input type="submit" value="Update Item Category" class="frmButton" />
                                    <a href="@Url.Action("ItemCategoryInformation","Admin")" class="btn btn-default">
                                        Back
                                    </a>
                                </div>
                            </form>

                        </div>
                    </div>

                    <!--//set-4-->
                </div>
                <!--//forms-inner-->
            </div>
        </div>
        <!-- //inner_content_w3_agile_info-->
    </div>
    <!-- //inner_content-->
</div>
